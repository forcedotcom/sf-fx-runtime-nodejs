#! /usr/bin/env bash

set -euo pipefail

if [ ! -f "tmp/wiremock.jar" ]; then
    echo "Downloading wiremock"
    mkdir -p ./tmp
    curl -fL https://repo1.maven.org/maven2/com/github/tomakehurst/wiremock-jre8-standalone/2.28.0/wiremock-jre8-standalone-2.28.0.jar -o tmp/wiremock.jar
fi

java -jar tmp/wiremock.jar --root-dir . "$@"
