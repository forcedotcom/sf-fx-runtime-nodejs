{
  "name": "sf-fx-runtime-nodejs",
  "version": "0.1.0-ea",
  "description": "A web server that takes in function source code and provides the Salesforce FX SDK to the invoked source code.",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts --max-warnings 0 --report-unused-disable-directives --format codeframe",
    "test": "mocha",
    "format": "npm run format:write && npm run format:check",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "docs": "typedoc src/sdk-interface-v1 --out docs --excludePrivate --plugin typedoc-plugin-markdown",
    "prepare": "npm run build",
    "bump": "node ./scripts/bump-version.js",
    "release": "./etc/publish.sh"
  },
  "files": [
    "dist/**/*"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@salesforce/core": "^2.20.5",
    "cloudevents": "^4.0.1",
    "fastify": "^3.14.2",
    "jsforce": "https://github.com/dzuelke/jsforce/tarball/8178554",
    "pino": "^6.11.3",
    "whatwg-mimetype": "^2.3.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@salesforce/ts-sinon": "^1.3.5",
    "@types/chai": "^4.2.16",
    "@types/jsforce": "^1.9.29",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/pino": "^6.3.8",
    "@types/sinon": "^10.0.0",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.3.4",
    "eslint": "^7.22.0",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "sinon": "^7.5.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.20.36",
    "typedoc-plugin-markdown": "^3.8.1",
    "typescript": "^4.2.3"
  },
  "bin": {
    "sf-fx-runtime-nodejs": "bin/invoke.js"
  }
}
