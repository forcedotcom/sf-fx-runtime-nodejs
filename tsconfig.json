{
  "compilerOptions": {
    "incremental": true,
    "module": "es2020",
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "pretty": true,
    "removeComments": true,
    "declaration": true
  },
  "exclude": ["node_modules", "test"]
}
